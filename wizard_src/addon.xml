<?xml version="1.0" encoding="utf-8"?>
<addon id="plugin.program.neurochainwizard"
       version="1.0.0"      <!-- bump to 1.0.1 -->
       name="NeuroChain Build Wizard"
       provider-name="YourName">
  <requires>
    <import addon="xbmc.python" version="2.25.0"/>
  </requires>
  <extension point="xbmc.python.plugin" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Installs the NeuroChain Kodi build</summary>
    <description>Downloads & installs the NeuroChain build ZIP from Releases</description>
    <platform>all</platform>
  </extension>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
  </assets>
</addon>
